<PropertyList>
	
	<path>radio.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Display</object-name>
		<object-name>Labels</object-name>
		<object-name>lcd</object-name>
		<emission>
			<red>1.0</red>
			<green>0.85</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Labels</object-name>
	</effect>
	
	<animation>
		<type>select</type>
		<object-name>Display</object-name>
		<object-name>Lights</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/outputs/crp[2]</property>
				<value>24</value>
			</greater-than-equals>
		</condition>
	</animation>
	
	<!-- Knobs -->
	<animation>
		<type>knob</type>
		<object-name>Dec.knob</object-name>
		<property>instrumentation/crp[2]/minor-rotate</property>
		<factor>-11.25</factor>
		<center>
			<x-m>0.02005</x-m>
			<y-m>0.03467</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<increase>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[2].adjustDec(1);</script>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[2].adjustDec(-1);</script>
			</binding>
		</decrease>
		<shift-increase>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[2].adjustDec(1, 1);</script>
			</binding>
		</shift-increase>
		<shift-decrease>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[2].adjustDec(-1, 1);</script>
			</binding>
		</shift-decrease>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/crp[2]/minor-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>Int.knob</object-name>
		<property>instrumentation/crp[2]/major-rotate</property>
		<factor>-11.25</factor>
		<center>
			<x-m>0.02005</x-m>
			<y-m>0.03467</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<increase>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[2].adjustInt(1);</script>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[2].adjustInt(-1);</script>
			</binding>
		</decrease>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/crp[2]/major-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<!-- Buttons -->
	<animation>
		<type>pick</type>
		<object-name>swap.btn</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[2].swap();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>vhf1.btn</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/crp[2]/mode</property>
				<value>0</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>vhf2.btn</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/crp[2]/mode</property>
				<value>1</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>vhf3.btn</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/crp[2]/mode</property>
				<value>2</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>vhf1.btn.light</object-name>
		<condition>
			<or>
				<property>controls/switches/annun-test</property>
				<equals>
					<property>instrumentation/crp[2]/mode</property>
					<value>0</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>vhf2.btn.light</object-name>
		<condition>
			<or>
				<property>controls/switches/annun-test</property>
				<equals>
					<property>instrumentation/crp[2]/mode</property>
					<value>1</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>vhf3.btn.light</object-name>
		<condition>
			<or>
				<property>controls/switches/annun-test</property>
				<equals>
					<property>instrumentation/crp[2]/mode</property>
					<value>2</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>hf1.btn.light</object-name>
		<condition>
			<or>
				<property>controls/switches/annun-test</property>
				<equals>
					<property>instrumentation/crp[2]/mode</property>
					<value>3</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>hf2.btn.light</object-name>
		<condition>
			<or>
				<property>controls/switches/annun-test</property>
				<equals>
					<property>instrumentation/crp[2]/mode</property>
					<value>4</value>
				</equals>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>selected</object-name>
		<property>instrumentation/crp[2]/mode</property>
		<factor>0.03320</factor>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!-- Active -->
	<animation>
		<type>textranslate</type>
		<object-name>active1</object-name>
		<property>instrumentation/crp[2]/active-int</property>
		<factor>0.001</factor>
