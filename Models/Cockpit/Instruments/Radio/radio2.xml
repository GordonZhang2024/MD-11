<PropertyList>
	
    <path>radio.ac</path>
	
	<animation>
		<type>material</type>
        <object-name>Display</object-name>
		<object-name>Labels</object-name>
		<object-name>lcd</object-name>
		<emission>
			<red>1.0</red>
			<green>0.85</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Labels</object-name>
	</effect>
	
    <animation>
        <type>select</type>
        <object-name>Display</object-name>
        <object-name>Lights</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/unused</property>
                <value>5</value>
            </greater-than>
        </condition>
    </animation>

</PropertyList>
