<PropertyList>
	
	<!-- Roll Axis -->
	<filter>
		<name>IT-CONTROLLER: Heading/LNAV</name>
		<type>gain</type>
		<gain>
			<expression>
				<table>
					<property>/velocities/airspeed-kt</property>
					<entry><ind>140</ind><dep>1.6</dep></entry>
					<entry><ind>360</ind><dep>2.6</dep></entry>
				</table>
			</expression>
		</gain>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/apfd-on</property>
					<or>
						<equals>
							<property>/it-autoflight/output/lat</property>
							<value>0</value>
						</equals>
						<equals>
							<property>/it-autoflight/output/lat</property>
							<value>1</value>
						</equals>
						<and>
							<equals>
								<property>/it-autoflight/output/lat</property>
								<value>5</value>
							</equals>
							<equals>
								<property>/it-autoflight/internal/takeoff-lvl</property>
								<value>0</value>
							</equals>
						</and>
					</or>
				</and>
			</condition>
		</enable>
		<input>/it-autoflight/internal/heading-error-deg</input>
		<reference>0</reference>
		<output>/it-autoflight/internal/target-roll-deg</output>
		<min>
			<property>/it-autoflight/internal/bank-limit</property>
			<scale>-1.0</scale>
		</min>
		<max>/it-autoflight/internal/bank-limit</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: VOR/LOC</name>
		<type>gain</type>
		<gain>
			<expression>
				<table>
					<property>/velocities/airspeed-kt</property>
					<entry><ind>140</ind><dep>1.6</dep></entry>
					<entry><ind>360</ind><dep>2.6</dep></entry>
				</table>
			</expression>
		</gain>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/apfd-on</property>
					<equals>
						<property>/it-autoflight/output/lat</property>
						<value>2</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/it-autoflight/internal/nav-heading-error-deg</input>
		<reference>0</reference>
		<output>/it-autoflight/internal/target-roll-deg</output>
		<min>
			<property>/it-autoflight/internal/bank-limit</property>
			<scale>-1.0</scale>
		</min>
		<max>/it-autoflight/internal/bank-limit</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: Align/Rollout/Takeoff</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/it-autoflight/output/lat</property>
						<value>4</value>
					</equals>
					<and>
						<equals>
							<property>/it-autoflight/output/lat</property>
							<value>5</value>
						</equals>
						<equals>
							<property>/it-autoflight/internal/takeoff-lvl</property>
							<value>1</value>
						</equals>
					</and>
				</or>
			</condition>
		</enable>
		<input>0</input>
		<output>/it-autoflight/internal/target-roll-deg</output>
	</filter>
	
	<filter>
		<name>System Command: Roll Target Inactive Sync</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<not><property>/it-autoflight/output/apfd-on</property></not>
			</condition>
		</enable>
		<input>/orientation/roll-deg</input>
		<output>/it-autoflight/internal/target-roll-deg</output>
		<min>
			<property>/it-autoflight/internal/bank-limit</property>
			<scale>-1.0</scale>
		</min>
		<max>/it-autoflight/internal/bank-limit</max>
	</filter>
	
	<filter>
		<name>System Command: Target Roll Filter</name>
		<type>noise-spike</type>
		<input>/it-autoflight/internal/target-roll-deg</input>
		<output>/it-autoflight/internal/target-roll</output>
		<max-rate-of-change>
			<condition>
				<not><property>/it-autoflight/output/apfd-on</property></not>
			</condition>
			<value>1000</value>
		</max-rate-of-change>
		<max-rate-of-change>
			<condition>
				<not><property>/it-autoflight/output/ap-on</property></not>
			</condition>
			<value>15</value>
		</max-rate-of-change>
		<max-rate-of-change>6</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Roll Rate Target</name>
		<type>gain</type>
		<gain>-0.9</gain>
		<input>/orientation/roll-deg</input>
		<reference>/it-autoflight/internal/target-roll</reference>
		<output>/it-autoflight/internal/roll-rate</output>
		<min>-5</min>
		<max>5</max>
	</filter>
	
	<filter>
		<name>System Command: Aileron Air Inactive Sync</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<not>
					<and>
						<property>/it-autoflight/output/ap-on</property>
						<equals>
							<property>/gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>/gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</not>
			</condition>
		</enable>
		<input>/controls/flight/aileron</input>
		<output>/it-autoflight/internal/aileron-cmd</output>
	</filter>
	
	<pid-controller>
		<name>System Command: Aileron Air</name>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/ap-on</property>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/orientation/roll-rate-degps</input>
		<reference>/it-autoflight/internal/roll-rate</reference>
		<output>/it-autoflight/internal/aileron-cmd</output>
		<config>
			<Kp>
				<expression>
					<product>
						<table>
							<property>/velocities/airspeed-kt</property>
							<entry><ind>140</ind><dep>0.17</dep></entry>
							<entry><ind>360</ind><dep>0.07</dep></entry>
						</table>
						<table> <!-- Reduce deflection if outer ailerons are not locked -->
							<property>/fdm/jsbsim/hydraulics/aileron-out-enable</property>
							<entry><ind>0</ind><dep>1.00</dep></entry>
							<entry><ind>1</ind><dep>0.72</dep></entry> <!-- Calculated based on Cl moment -->
						</table>
					</product>
				</expression>
			</Kp>
			<Ti>1.0</Ti>
			<Td>0.0001</Td>
			<u_min>-1.0</u_min>
			<u_max>1.0</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>System Command: Aileron Ground</name>
		<type>gain</type>
		<gain>-0.1</gain>
		<enable>
			<condition>
				<property>/it-autoflight/output/ap-on</property>
			</condition>
		</enable>
		<input>/orientation/roll-deg</input>
		<reference>0</reference>
		<output>/it-autoflight/internal/aileron-rollout</output>
	</filter>
	
	<filter>
		<name>System Command: Aileron Inactive Sync</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<not><property>/it-autoflight/output/ap-on</property></not>
			</condition>
		</enable>
		<input>/controls/flight/aileron</input>
		<output>/fdm/jsbsim/fcc/afs/roll-cmd</output>
	</filter>
	
	<filter>
		<name>System Command: Aileron Filter</name>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<property>/it-autoflight/output/ap-on</property>
			</condition>
		</enable>
		<input>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<property>/it-autoflight/internal/aileron-cmd</property>
		</input>
		<input>/it-autoflight/internal/aileron-rollout</input>
		<output>/fdm/jsbsim/fcc/afs/roll-cmd</output>
		<max-rate-of-change>1.2</max-rate-of-change>
	</filter>
	
	<!-- Yaw Axis -->
	<pi-simple-controller>
		<name>IT-CONTROLLER: Yaw VOR/LOC</name>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/ap-on</property>
					<equals>
						<property>/it-autoflight/output/lat</property>
						<value>4</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/it-autoflight/internal/nav-heading-error-deg</input>
		<reference>0</reference>
		<output>/it-autoflight/internal/rudder-cmd</output>
		<config>
			<Kp>
				<condition>
					<and>
						<equals>
							<property>/gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>/gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<value>-0.05</value>
			</Kp>
			<Kp>-0.02</Kp>
			<Ki>0</Ki>
		</config>
		<min>-0.15</min>
		<max>0.15</max>
	</pi-simple-controller>
	
	<pi-simple-controller>
		<name>IT-CONTROLLER: Takeoff Parallel Rudder PI</name>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/ap-on</property>
					<equals>
						<property>/it-autoflight/output/lat</property>
						<value>5</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/aero/beta-deg</input> <!-- Deg on purpose -->
		<reference>0</reference>
		<output>/it-autoflight/internal/rudder-pi-cmd</output>
		<config> <!-- FCC turn coordination is turned off, this replaces it and closes error faster -->
			<Kp>
				<expression>
					<table>
						<property>/velocities/airspeed-kt</property>
						<entry><ind>140</ind><dep>-0.15</dep></entry>
						<entry><ind>360</ind><dep>-0.10</dep></entry>
					</table>
				</expression>
			</Kp>
			<Ki>
				<expression>
					<table>
						<property>/velocities/airspeed-kt</property>
						<entry><ind>140</ind><dep>-0.05</dep></entry>
						<entry><ind>360</ind><dep>-0.03</dep></entry>
					</table>
				</expression>
			</Ki>
		</config>
		<min>-1.0</min>
		<max>1.0</max>
	</pi-simple-controller>
	
	<filter>
		<name>IT-CONTROLLER: Takeoff Parallel Rudder D</name>
		<type>derivative</type>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/ap-on</property>
					<equals>
						<property>/it-autoflight/output/lat</property>
						<value>5</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/aero/beta-rad</input> <!-- Rad on purpose -->
		<reference>0</reference>
		<output>/it-autoflight/internal/rudder-d-cmd</output>
		<filter-time>
			<expression>
				<table>
					<property>/velocities/airspeed-kt</property>
					<entry><ind>140</ind><dep>3</dep></entry>
					<entry><ind>360</ind><dep>1</dep></entry>
				</table>
			</expression>
		</filter-time>
		<min>-1.0</min>
		<max>1.0</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: Takeoff Parallel Rudder</name> <!-- Sum the above 3 controllers to make a manual PID controller -->
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/ap-on</property>
					<equals>
						<property>/it-autoflight/output/lat</property>
						<value>5</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<expression>
				<sum>
					<property>/it-autoflight/internal/rudder-pi-cmd</property>
					<property>/it-autoflight/internal/rudder-d-cmd</property>
				</sum>
			</expression>
		</input>
		<output>/it-autoflight/internal/rudder-cmd</output>
		<min>-1.0</min>
		<max>1.0</max>
	</filter>
	
	<filter>
		<name>System Command: Rudder</name>
		<type>noise-spike</type>
		<input>
			<condition>
				<and>
					<property>/it-autoflight/output/ap-on</property>
					<or>
						<equals>
							<property>/it-autoflight/output/lat</property>
							<value>4</value>
						</equals>
						<equals>
							<property>/it-autoflight/output/lat</property>
							<value>5</value>
						</equals>
					</or>
				</and>
			</condition>
			<property>/it-autoflight/internal/rudder-cmd</property>
		</input>
		<input>0</input>
		<output>/fdm/jsbsim/fcc/afs/yaw-cmd</output>
		<max-rate-of-change>1.2</max-rate-of-change>
	</filter>

</PropertyList>
