			</test>
			<test value="/instrumentation/comm[2]/frequencies/standby-mhz-fmt">
				/instrumentation/crp[1]/mode eq 2
			</test>
		</switch>
		
		<pure_gain name="/instrumentation/crp[1]/stby-x100">
			<input>/instrumentation/crp[1]/stby</input>
			<gain>100</gain>
		</pure_gain>
		
		<fcs_function name="/instrumentation/crp[1]/stby-mod">
