					<value>0</value>
				</ifthen>
			</function>
		</fcs_function>
		
		<!-- CRP 2 -->
		<switch name="/instrumentation/crp[1]/active">
			<default value="/instrumentation/comm[0]/frequencies/selected-mhz-fmt"/>
