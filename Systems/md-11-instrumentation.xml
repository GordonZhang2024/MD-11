					<property>/instrumentation/crp[2]/stby-x100</property>
					<value>10</value>
				</mod>
			</function>
		</fcs_function>
		
		<fcs_function name="/instrumentation/crp[2]/stby-5">
			<function>
				<ifthen>
					<or>
						<eq>
							<property>/instrumentation/crp[2]/stby-mod</property>
							<value>2</value>
						</eq>
						<eq>
							<property>/instrumentation/crp[2]/stby-mod</property>
