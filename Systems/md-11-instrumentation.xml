					<property>/instrumentation/crp[1]/stby-x100</property>
					<value>10</value>
				</mod>
			</function>
		</fcs_function>
		
		<fcs_function name="/instrumentation/crp[1]/stby-5">
			<function>
				<ifthen>
					<or>
						<eq>
							<property>/instrumentation/crp[1]/stby-mod</property>
							<value>2</value>
						</eq>
						<eq>
							<property>/instrumentation/crp[1]/stby-mod</property>
							<value>7</value>
						</eq>
					</or>
					<value>5</value>
