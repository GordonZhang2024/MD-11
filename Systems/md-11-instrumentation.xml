			</function>
		</fcs_function>
		
		<!-- CRP 3 -->
		<switch name="/instrumentation/crp[2]/active">
			<default value="/instrumentation/comm[0]/frequencies/selected-mhz-fmt"/>
			<test value="/instrumentation/comm[1]/frequencies/selected-mhz-fmt">
